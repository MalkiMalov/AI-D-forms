#:include error.kv
#:include times.kv

<Login>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Image:
            size_hint_y: 3
            source: 'logo.png'

        Label:

        BoxLayout:
            orientation: 'vertical'

            MDTextField:
                id: login
                font_name_hint_text:'Arial.ttf'
                hint_text:"שמתשמ םש"
                halign: "right"
                line_color_focus: 0.7764705882, 0, 0, 1
                size_hint_x:0.7
                pos_hint :{'x':.2, 'y':.2}
                icon_right:"account"


            MDTextField:
                id: password
                hint_text:"אמסיס"
                font_name_hint_text:'Arial.ttf'
                halign: "right"
                line_color_focus: 0.7764705882, 0, 0, 1
                size_hint_x:0.7
                pos_hint :{'x':.2, 'y':.2}
                password:True
                icon_right:"eye-off"


        MDRoundFlatButton:
            text: "רבחתה"
            font_name:'Arial.ttf'
            text_color: 0.7764705882, 0, 0, 1
            line_color:0.7764705882, 0, 0, 1
            size_hint_x:0.5
            pos_hint :{'x':.25, 'y':.2}
            on_press: root.do_login(login.text, password.text)


